@font-face {
    font-family: 'Fira Code';
    src: url('https://cdnjs.cloudflare.com/ajax/libs/firacode/6.2.0/woff2/FiraCode-Regular.woff2') format('woff2');
}

body {
    font-family: 'Fira Code', monospace;
    margin: 0;
    padding: 0;
}
.photo-container {
    display: flex;
    justify-content: center;
    align-items: center;
}
img {
    max-width: 80%;
    max-height: 80%;
}

#photo {
    max-width: 100%;
    height: auto;
    opacity: 1;
    transition: opacity 0.5s ease;
    width: 500px;
    height: 500px;
}

#prev, #next {
    background-color: #333;
    color: #fff;
    border: none;
    padding: 10px;
    font-size: 20px;
    cursor: pointer;
    border-radius: 5px;
}
#prev {
    margin-right: 10px;
    height: 60px;
}
#next {
    margin-left: 10px;
    height: 60px;
}
#photo-date {
    align-items: center;
    margin-top: 20px;
    display: inline-block; 
    padding: 10px; 
    color: #fff;
    font-family: 'Fira Code', monospace;
    background-color: #000;
    border: 3px solid #fff;
    outline: 2px solid #000;
}
#photo-description {
    align-items: center;
    margin-top: 20px;
    display: inline-block;
    padding: 10px;
    color: #fff;
    font-family: 'Fira Code', monospace;
    background-color: #000;
    border: 3px solid #fff;
    outline: 2px solid #000;
}
